<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.finalproject.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_appointment"
        android:name="com.example.finalproject.ui.appointment.AppointmentFragment"
        android:label="Appointments"
        tools:layout="@layout/fragment_appointment" />

    <fragment
        android:id="@+id/navigation_location"
        android:name="com.example.finalproject.ui.location.LocationFragment"
        android:label="Location"
        tools:layout="@layout/fragment_location" />
    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.finalproject.ui.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/confirmationFragment"
        android:name="com.example.finalproject.ui.appointment.ConfirmationFragment"
        android:label="Appointment Confirmation"
        tools:layout="@layout/fragment_confirmation" />
    <fragment
        android:id="@+id/editProfileFragment"
        android:name="com.example.finalproject.EditProfileFragment"
        android:label="Edit Profile"
        tools:layout="@layout/fragment_edit_profile" />
</navigation>